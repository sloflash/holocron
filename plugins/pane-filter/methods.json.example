{
  "version": "1.0.0",
  "methods": [
    {
      "id": "restart-pod",
      "name": "Restart Pod",
      "description": "Restart the currently selected Kubernetes pod",
      "command": "kubectl",
      "args": ["delete", "pod", "--grace-period=0"],
      "env": {},
      "requires_confirmation": true
    },
    {
      "id": "logs-tail",
      "name": "Tail Logs",
      "description": "Show real-time logs from the selected resource",
      "command": "kubectl",
      "args": ["logs", "-f"],
      "env": {},
      "requires_confirmation": false
    },
    {
      "id": "describe-resource",
      "name": "Describe Resource",
      "description": "Show detailed information about the selected resource",
      "command": "kubectl",
      "args": ["describe"],
      "env": {},
      "requires_confirmation": false
    },
    {
      "id": "port-forward",
      "name": "Port Forward",
      "description": "Forward port from selected pod to localhost",
      "command": "kubectl",
      "args": ["port-forward"],
      "env": {},
      "requires_confirmation": false
    },
    {
      "id": "exec-shell",
      "name": "Exec Shell",
      "description": "Open an interactive shell in the selected pod",
      "command": "kubectl",
      "args": ["exec", "-it", "--", "/bin/bash"],
      "env": {},
      "requires_confirmation": false
